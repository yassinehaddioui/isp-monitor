{
    "name": "isp-monitor/isp-monitor",
    "description": "A service to monitor your internet connection",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/yassinehaddioui/isp-monitor",
    "license": "MIT",
    "authors": [
        {
            "name": "Yassine Haddioui",
            "email": "yassine@haddioui.com",
            "homepage": "http://webmy.me"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "beberlei/assert": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload":{
        "psr-4": {
            "IspMonitor\\": "src/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
